{
  "theme": "Catppuccin Frapp√©",
  // "experimental.theme_overrides": {
  //   // For Kanagawa Wave
  //   "editor.gutter.background": "#1F1F28"
  // },
  "buffer_font_family": "TX-02",
  "ui_font_family": "Bitter",
  "buffer_font_size": 12,
  "ui_font_size": 13,
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2",
    "dock": "right"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false,
    "selections_menu": false
  },
  "vertical_scroll_margin": 3,
  "relative_line_numbers": true,
  "restore_on_startup": "last_workspace",
  "show_inline_completions": false,
  "tabs": {
    "file_icons": false,
    "activate_on_close": "neighbour"
  },
  "features": {
    "copilot": false
  },
  "cursor_blink": false,
  "file_scan_exclusions": [
    "**/__pycache__/",
    "**/.pytest_cache/",
    "**/.ruff_cache/",
    ".DS_Store/",
    "tmp/",
    ".git/"
  ],
  "vim_mode": true,
  "project_panel": {
    "dock": "left",
    "auto_fold_dirs": false,
    "indent_size": 13,
    "default_width": 200,
    "auto_reveal_entries": true,
    "scrollbar": { "show": "never" }
  },
  "outline_panel": { "default_width": 200 },
  "terminal": {
    "dock": "bottom",
    "blinking": "off",
    "toolbar": {
      "breadcrumbs": false
    },
    "detect_venv": { "on": { "activate_script": "fish" } },
    "shell": "system"
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tab_bar": { "show_nav_history_buttons": false },
  "languages": {
    "Python": {
      "language_servers": ["pyright"],
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "ruff check --select=I --fix --stdin-filename {buffer_path} | ruff format --stdin-filename {buffer_path}"
          ]
        }
      }
    },
    "Elixir": {
      "language_servers": ["elixir-ls"]
    },
    "HEEX": {
      "language_servers": ["elixir-ls", "tailwindcss-language-server"]
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "basic",
          "diagnosticMode": "openFilesOnly",
          "autoSearchPaths": true,
          "useLibraryCodeForTypes": true,
          "diagnosticSeverityOverrides": {}
        }
      }
    }
  }
}
